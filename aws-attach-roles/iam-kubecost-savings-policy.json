{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Version": "2012-10-17",
            "Statement": [
                {
                    "Action": [
                        "s3:GetBucketLocation",
                        "s3:ListBucket"
                    ],
                    "Resource": [
                        "arn:aws:s3:::YourThanosBucketName"
                    ],
                    "Effect": "Allow",
                    "Sid": "kubecostMetricsBucket"
                },
                {
                    "Action": [
                        "s3:GetObject",
                        "s3:ListBucket",
                        "s3:ListBucketMultipartUploads",
                        "s3:ListMultipartUploadParts",
                        "s3:AbortMultipartUpload",
                        "s3:PutObject"
                    ],
                    "Resource": [
                        "arn:aws:s3:::YourThanosBucketName/*"
                    ],
                    "Effect": "Allow",
                    "Sid": "kubecostMetricsAccess"
                }
            ]
        },
        {
            "Sid": "KubecostSavingsAccess",
            "Effect": "Allow",
            "Action": [
                "ec2:DescribeAddresses",
                "ec2:DescribeVolumes"
            ],
            "Resource": "*"
        },
        {
            "Sid": "SpotDataAccess",
            "Effect": "Allow",
            "Action": [
                "s3:GetBucketLocation",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::SpotDataFeedBucketName"
            ]
        },
        {
            "Sid": "SpotDataAccess",
            "Effect": "Allow",
            "Action": [
                "s3:GetBucketAcl",
                "s3:GetObject"
            ],
            "Resource": [
                "arn:aws:s3:::SpotDataFeedBucketName/*"
            ]
        }
    ]
}