{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "KubecostSavingsAccess",
            "Effect": "Allow",
            "Action": [
                "ec2:DescribeAddresses",
                "ec2:DescribeVolumes"
            ],
            "Resource": "*"
        },
        {
            "Action": [
                "s3:GetBucketLocation",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::SpotDataFeedBucketName"
            ],
            "Effect": "Allow",
            "Sid": "SpotDataBucketAccess"
        },
        {
            "Sid": "SpotDataAccess",
            "Effect": "Allow",
            "Action": [
                "s3:GetBucketAcl",
                "s3:GetObject"
            ],
            "Resource": [
                "arn:aws:s3:::SpotDataFeedBucketName/*"
            ]
        }
    ]
}