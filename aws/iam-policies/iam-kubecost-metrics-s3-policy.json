{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "KubecostMetricsBucket",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket",
                "s3:GetObject",
                "s3:DeleteObject",
                "s3:PutObject"
            ],
            "Resource": [
                "arn:aws:s3:::KUBECOST_METRICS_BUCKET",
                "arn:aws:s3:::KUBECOST_METRICS_BUCKET/*"
            ]
        }
    ]
}
